<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field='style'>
		.textbox {
			width: 100%;
			height: 1em;
		}
		
		.button {
			float: right;
			height: 2em;
		}
		
		.textbox_container {
			padding-top: 0.5em;
			padding-left: 1em;
			padding-right: 1.9em;
			height: 2.5em;
		}
		
		.button_container {
			height: 2.5em;
			padding-right: 1em;
		}
	</ui:style>
	<g:FlowPanel>
		<g:SimplePanel styleName='{style.textbox_container}'>
			<g:TextBox ui:field='textBox' addStyleNames='{style.textbox}'/>
		</g:SimplePanel>
		<g:SimplePanel styleName='{style.button_container}'>
			<g:Button ui:field='button' addStyleNames='{style.button}'>Add IMDB Link</g:Button>
		</g:SimplePanel>
	</g:FlowPanel>
</ui:UiBinder>
